{
  "expo": {
    "name": "CronPost",
    "slug": "CronPost",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "com.cronpost.app",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSContactsUsageDescription": "CronPost uses your contacts to help you easily select recipients for your messages.",
        "NSFaceIDUsageDescription": "CronPost uses Face ID to securely unlock your account and verify critical actions.",
        "NSPhotoLibraryUsageDescription": "CronPost needs access to your photo library to allow you to select files for upload.",
        "UIDocumentPickerViewController": true,
        "ITSAppUsesNonExemptEncryption": false,
        "UIBackgroundModes": [
          "fetch",
          "remote-notification"
        ]
      },
      "bundleIdentifier": "com.cronpost.app",
      "googleServicesFile": "./GoogleService-Info.plist"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.cronpost.app",
      "googleServicesFile": "./google-services.json",
      "permissions": [
        "android.permission.READ_CONTACTS",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.POST_NOTIFICATIONS"
      ],
      "versionCode": 1,
      "softwareKeyboardLayoutMode": "pan"
    },
    "notification": {
       "icon": "./assets/images/notification-icon.png"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-document-picker",
        {
          "iCloudContainerEnvironment": "Production"
        }
      ],
      "@react-native-firebase/app",
      "@react-native-firebase/messaging"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "6fad9afe-1db9-4661-8b7c-e1fe85682df4"
      }
    }
  }
}